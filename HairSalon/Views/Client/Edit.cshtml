<!-- client/edit.cshtml -->
@{
    ViewData["Page"] = "Edit Client";
}
<p>Update Client Information:</p>

<form asp-controller="client" asp-action="update" method="post">
    <input type="hidden" name="clientId" value = "@Model.Id">
  <div class="">
    <label for="firstName">First Name: </label>
    <input type="text" name="firstName" value=@Model.FirstName>
  </div>
  <div class="">
    <label for="lastName">Last Name: </label>
    <input type="text" name="lastName" value=@Model.LastName>
  </div>
  <div class="">
    <label for="phone">Phone Number: </label>
    <input type="text" name="phone" value=@Model.Phone>
  </div>
  <button class="btn btn-dark" type="submit">Update Client</button>
</form>